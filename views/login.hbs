<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center mt-3">Login</h1>
          {{> message}}
          <form action="/user/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input id="email" class="form-control" type="email" name="email" placeholder="Enter Email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input id="password" class="form-control" type="password" name="password" placeholder="Enter Password">
            </div>
            <button class="btn btn-secondary btn-block" type="submit">Login</button>
            <a href="/auth/google" class="btn btn-danger btn-block">Google</a>
          </form>
          <p class="lead mt-4">
            No Account? <a href="/user/register">Register</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
